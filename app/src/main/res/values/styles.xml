<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black_effective</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/dark_gray</item>
    </style>

    <!-- Theme for Splash Screen -->
    <style name="splashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="TTListView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:divider">@color/black_effective</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

</resources>
